<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_white_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:id="@+id/folderImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/new_folder_img" />

    <TextView
        android:id="@+id/enterFodlerNaemTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/folderImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/enter_folder_name"
        android:textColor="@color/mid_grey"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/folderNameEd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/enterFodlerNaemTv"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edittext_white_bg"
        android:elevation="5dp"
        android:textColorHint="@color/light_grey"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12dp"
        android:textColor="@color/sea_green"
        android:hint="@string/enter_folder_name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="20"
        android:paddingStart="15dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/folderNameEd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_seagreen_light"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/create_new"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <include
        android:id="@+id/bannderLayout"
        layout="@layout/banner_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/saveBtn"
        android:layout_marginTop="47dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</RelativeLayout>